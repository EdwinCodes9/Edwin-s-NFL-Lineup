<!DOCTYPE html>
<html lang="en">
<head>
 <%- include('./partials/head.ejs')%>
</head>
<body class="text-center show">
   <form action="/<%=Player._id%>?_method=PUT" method="POST">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input  class="form-control" type="text"  name="name" value="<%=Player.name%>">
        </div>
      </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">POS.</label>
        <div class="col-sm-10">
          <input  class="form-control" type="text"  name="position" value="<%=Player.position%>">
        </div>
      </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">O/D</label>
        <div class="col-sm-10">
          <input  class="form-control" type="text"  name="tag" value="<%=Player.tag%>">
        </div>
      </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">OVR</label>
        <div class="col-sm-10">
          <input  class="form-control" type="text"  name="ovr" value="<%=Player.ovr%>">
        </div>
      </div>
    </div>
    <input class="btn btn-outline-primary" type="submit" value="edit">
   </form>
</body>
</html>